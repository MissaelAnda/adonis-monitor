{
  "name": "adonis-monitor",
  "description": "",
  "version": "0.0.1-alpha1",
  "engines": {
    "node": ">=20.6.0"
  },
  "type": "module",
  "files": [
    "build",
    "!build/bin",
    "!build/tests"
  ],
  "exports": {
    ".": "./build/index.js",
    "./monitors/*": "./build/src/monitors/*.js",
    "./plugins/inertia": "./build/src/plugins/inertia/main.js",
    "./store/*": "./build/src/store/*.js",
    "./resources/*": "./build/resources/*.ts",
    "./plugins/inertia/app": "./inertia/plugins/inertia.js",
    "./resources/app.css": "./inertia/css/app.css",
    "./commands": "./build/commands/main.js",
    "./services/main": "./build/services/main.js",
    "./monitor_provider": "./build/providers/monitor_provider.js",
    "./monitor_middleware": "./build/src/middleware.js",
    "./types": "./build/src/types.d.ts"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" \"resources/**/*.edge\" \"inertia/**/*.vue\" build",
    "index:commands": "adonis-kit index build/commands",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "pretest": "npm run lint",
    "test": "c8 npm run quick:test",
    "prebuild": "npm run lint && npm run clean",
    "build": "npm run clean && tsc && npm run index:commands",
    "postbuild": "npm run copy:templates",
    "release": "np",
    "version": "npm run build",
    "prepublishOnly": "npm run build",
    "dev": "tsc --watch"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/auth": "^9.4.2",
    "@adonisjs/bouncer": "^3.1.6",
    "@adonisjs/core": "^6.12.0",
    "@adonisjs/eslint-config": "2.0.0-beta.7",
    "@adonisjs/lucid": "^21.8.0",
    "@adonisjs/prettier-config": "^1.4.0",
    "@adonisjs/tsconfig": "^1.3.0",
    "@japa/assert": "^3.0.0",
    "@japa/runner": "^3.1.4",
    "@swc/core": "^1.6.3",
    "@types/node": "^20.14.5",
    "c8": "^10.1.2",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "eslint": "^9.15.0",
    "np": "^10.0.6",
    "prettier": "^3.3.2",
    "ts-node-maintained": "^10.9.4",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.2.0",
    "@adonisjs/inertia": "^3.1.1",
    "@inertiajs/vue3": "^2.0.11",
    "@vinejs/vine": "^3.0.1",
    "vue": "^3.5.14"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "latest",
    "branch": "main",
    "anyBranch": false
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "prettier": "@adonisjs/prettier-config"
}
